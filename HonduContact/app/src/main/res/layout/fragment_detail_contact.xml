<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobintum.honducontact.fragments.DetailContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:id="@+id/layoutBack"
            android:background="@color/colorPrimary"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:paddingTop="@dimen/img_size">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="@dimen/font_title"
                    android:id="@+id/txtName"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_title"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_phone"
                    android:padding="@dimen/padding_big"
                    android:id="@+id/txtNumber" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_title"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_email"
                    android:padding="@dimen/padding_big"
                    android:id="@+id/txtEmail" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_title"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_github"
                    android:padding="@dimen/padding_big"
                    android:id="@+id/txtGithub" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_title"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:padding="@dimen/padding_big"
                    android:id="@+id/txtFacebook" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_title"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_twitter"
                    android:padding="@dimen/padding_big"
                    android:id="@+id/txtTwitter" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_title"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_instagram"
                    android:padding="@dimen/padding_big"
                    android:id="@+id/txtInstagram" />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <com.mobintum.honducontact.utilities.RoundedImageView
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:src="@drawable/img_profile"
        android:scaleType="centerCrop"
        app:layout_anchor="@id/layoutBack"
        app:layout_anchorGravity="bottom|center"
        android:id="@+id/imgProfile"/>


</android.support.design.widget.CoordinatorLayout>
